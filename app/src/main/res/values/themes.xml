<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CoupSome" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="textInputStyle">@style/Widget.Coupsome.TextInputLayout</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.CoupSome" parent="Base.Theme.CoupSome" />

    <style name="heading_large">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">@dimen/_32ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>
    <style name="heading_medium">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="title_large">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="title_medium">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="title_small">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="body_large">
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="body_medium">
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="body_small">
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="label_medium">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="label_small">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="Widget.Coupsome.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/_16sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_16sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_16sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_16sdp</item>
    </style>

    <style name="Widget.Coupsome.Button" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/purple_500</item>
    </style>

    <style name="Widget.Coupsome.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_500</item>
    </style>

    <style name="Widget.Coupsome.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>